extends layout

block content
  .container
      .row.clearfix
        .col-md-12.column
          .jumbotron
            h1
              | ElectroDJ
          #alertMessage.alert.alert-info.alert-dismissable.hidden
            button.close(type='button', data-dismiss='alert', aria-hidden='true') Ã—
            h4
            | Your request has been successfully submitted!
          h3
            | Make a request
          form.form-horizontal(role='form')
            .form-group
              label.col-sm-2.control-label(for='inputTitle') Title
              .col-sm-10
                input#inputTitle.form-control(type='text')
            .form-group
              label.col-sm-2.control-label(for='inputArtist') Artist
              .col-sm-10
                input#inputArtist.form-control(type='text')
            .form-group
              .col-sm-offset-2.col-sm-10
                div#buttonRequest.btn.btn-primary Send Request
